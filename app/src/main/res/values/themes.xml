    <style name="Button.Card.Tags" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="Button.Card.Tags.Primary">
        <item name="android:background">@drawable/button_tags_primary</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:drawableTint">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="Button.Card.Tags.Secondary">
        <item name="android:background">@drawable/button_tags_secondary</item>
