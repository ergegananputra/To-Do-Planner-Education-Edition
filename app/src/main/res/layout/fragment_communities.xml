<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_communities"
                android:layout_width="48dp"
                android:layout_height="48dp"

                app:srcCompat="@drawable/ic_communities_outline"
                app:iconTint="?attr/colorError"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_title_communities_greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                android:text="Welcome to communities"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textAlignment="center"

                app:layout_constraintTop_toBottomOf="@id/icon_communities"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_title_app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Version Beta 0.1"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textAlignment="center"

                app:layout_constraintTop_toBottomOf="@id/text_view_title_communities_greeting"/>
            <LinearLayout
                android:id="@+id/linearLayout_communities_guidelines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="48dp"

                app:layout_constraintTop_toBottomOf="@id/text_view_title_app_version"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"

                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Communities Guideline"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="@string/communities_guideline_description_1"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"

                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="?attr/colorErrorContainer"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="@string/communities_guideline_description_2"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout_create_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical"

                app:layout_constraintTop_toBottomOf="@id/linearLayout_communities_guidelines"
                app:layout_constraintStart_toStartOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_title_create_community"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Create Community"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnBackground"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_description_create_community"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    android:text="@string/create_community_description"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnBackground"

                    app:layout_constraintTop_toBottomOf="@id/text_view_title_create_community"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_manage_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:strokeWidth="0dp"

                    app:layout_constraintTop_toBottomOf="@id/text_view_description_create_community"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginVertical="8dp"
                            android:orientation="vertical"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_title_manage_member"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/manage_member"
                                android:textAppearance="?attr/textAppearanceTitleLarge"
                                android:textColor="?attr/colorOnSurface" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_description_manage_member"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/manage_member_description"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icon_manage_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"

                            app:srcCompat="@drawable/ic_group_outline"
                            android:tint="?attr/colorOnSurface"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_routine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:strokeWidth="0dp"

                    app:layout_constraintTop_toBottomOf="@id/card_view_manage_member"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginVertical="8dp"
                            android:orientation="vertical"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_title_routine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="routine title"
                                android:textAppearance="?attr/textAppearanceTitleLarge"
                                android:textColor="?attr/colorOnSurface" />
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_code_routine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/routine_code"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurface" />
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_description_routine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="routine desccription"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icon_routine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"

                            app:srcCompat="@drawable/ic_backup_outline"
                            android:tint="?attr/colorOnSurface"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical"

                app:layout_constraintTop_toBottomOf="@id/linearLayout_create_community"
                app:layout_constraintStart_toStartOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_title_join_community"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/join_community"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnBackground"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_description_join_community"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    android:text="@string/join_community_description_1"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnBackground"

                    app:layout_constraintTop_toBottomOf="@id/text_view_title_join_community"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_join_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="@string/join_community"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"

                    app:layout_constraintTop_toBottomOf="@id/text_view_description_join_community"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>