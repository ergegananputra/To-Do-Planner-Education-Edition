<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_communities"
        android:layout_width="48dp"
        android:layout_height="48dp"

        app:srcCompat="@drawable/ic_communities_outline"
        app:iconTint="?attr/colorError"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_title_communities_greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:text="Welcome to Communities"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textAlignment="center"

        app:layout_constraintTop_toBottomOf="@id/icon_communities"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_title_app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Version Beta 0.1"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textAlignment="center"

        app:layout_constraintTop_toBottomOf="@id/text_view_title_communities_greeting"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_description_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:text="@string/community_manager_description"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnBackground"

        app:layout_constraintTop_toBottomOf="@id/text_view_title_app_version"
        app:layout_constraintStart_toStartOf="parent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_bar_routines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        style="@style/SearchBar"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_description_storage"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            style="@style/SearchBar.Text"
            android:backgroundTint="?attr/colorSurfaceContainerHigh"
            android:hint="@string/search_member"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_routines"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="56dp"
        android:layout_marginTop="8dp"

        android:clipToPadding="false"
        tools:listitem="@layout/item_member"

        app:layout_constraintTop_toBottomOf="@id/search_bar_routines"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>