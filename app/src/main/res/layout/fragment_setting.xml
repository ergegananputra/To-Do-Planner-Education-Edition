<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_title_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/storage"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="?attr/colorOnBackground"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_description_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:text="@string/storage_description"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnBackground"

            app:layout_constraintTop_toBottomOf="@id/text_view_title_storage"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_tasks_and_routines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:strokeWidth="0dp"

            app:layout_constraintTop_toBottomOf="@id/text_view_description_storage"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_title_tasks_and_routines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/tasks_and_routines"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="?attr/colorOnSurface"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_description_tasks_and_routines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="999 task and 999 routines"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_delete_tasks_and_routines"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    app:icon="@drawable/ic_delete_outline"
                    app:iconTint="?attr/colorError"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_title_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/permissions"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="?attr/colorOnBackground"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_description_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:text="@string/permissions_description"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnBackground"

            app:layout_constraintTop_toBottomOf="@id/text_view_title_permissions"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_push_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:strokeWidth="0dp"

            app:layout_constraintTop_toBottomOf="@id/text_view_description_permissions"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_push_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"

                    android:checked="true"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/switch_push_notification">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_title_push_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/push_notification"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="?attr/colorOnSurface"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_description_push_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/push_notification_description"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_alert_and_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:strokeWidth="0dp"

            app:layout_constraintTop_toBottomOf="@id/card_view_push_notification"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_title_alert_and_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/alert_and_reminder"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="?attr/colorOnSurface"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_description_alert_and_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/alert_and_reminder_description"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginEnd="16dp"

                    android:checked="true"
                    android:textColor="?attr/colorOnSurface"
                    android:textAppearance="?attr/textAppearanceBodySmall"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>